{
  "build": {
    "beforeDevCommand": "npm run dev:browser",
    "beforeBuildCommand": "npm run build:browser",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Kriby Desktop Game",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "scope": ["$APPLOCALDATA/*"]
      },
      "window": {
        "setFullscreen": true
      }
    },
    "windows": [
      {
        "title": "Kriby Desktop Game",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "shortDescription": "A desktop game made in JavaScript and Tauri",
      "active": true,
      "targets": "all",
      "identifier": "kriby",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
